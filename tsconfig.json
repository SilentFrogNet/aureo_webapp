{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": [
        "./src/*"
      ],
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "jsx": "react",
    "target": "es5",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "stories/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}
